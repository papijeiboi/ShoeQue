<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_drawer_admin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.AdminMainMenuActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:background="@color/colorPrimaryDark"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="Admin"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/btn_menu_admin"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center|start"
                    android:layout_marginStart="16dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:src="@drawable/ic_menu"
                    android:tint="@color/colorWhite" />


            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?actionBarSize"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_admin_manage_stock"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_stock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Manage Stock"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_admin_manage_sales_user"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_manage_sales" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Manage Sales User"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_admin_manage_stock_user"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="end"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_manage_stock" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Manage Stock User"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />

                </androidx.cardview.widget.CardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_admin_manage_admin_user"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="start"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_manage_admin" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|bottom"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Manage Admin User"
                        android:textColor="@color/colorWhite"
                        android:textSize="25sp" />


                </androidx.cardview.widget.CardView>

<!--                <androidx.cardview.widget.CardView-->
<!--                    android:id="@+id/btn_admin_transaction_history"-->
<!--                    android:layout_width="300dp"-->
<!--                    android:layout_height="200dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:clickable="true"-->
<!--                    android:focusable="true"-->
<!--                    android:foreground="?android:attr/selectableItemBackground"-->
<!--                    app:cardBackgroundColor="@color/colorPrimaryDark"-->
<!--                    app:cardCornerRadius="8dp"-->
<!--                    app:cardElevation="10dp"-->
<!--                    app:cardPreventCornerOverlap="false">-->

<!--                    <TextView-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center|bottom"-->
<!--                        android:layout_marginBottom="16dp"-->
<!--                        android:fontFamily="@font/open_sans_bold"-->
<!--                        android:text="Transaction History"-->
<!--                        android:textColor="@color/colorWhite"-->
<!--                        android:textSize="25sp" />-->

<!--                </androidx.cardview.widget.CardView>-->

            </FrameLayout>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="275dp"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <include
            android:id="@+id/drawer_admin"
            layout="@layout/layout_drawer_admin" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>